{
  "name": "backborr",
  "version": "0.0.1",
  "description": "Context that encompasses the backend application of will serve to provide service to borrowers",
  "main": "start.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/start.js",
    "dev:app:backend": "nodemon --watch \"src/**/*.ts\" --exec \"ts-node\" src/start.ts",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "test:features": "npm run test:api:features",
    "test:api:features": "NODE_ENV=test cucumber-js -p borrower_backend"
  },
  "author": "Jose Luis Sandoval Aburto",
  "license": "ISC",
  "dependencies": {
    "bson": "^5.0.1",
    "compression": "^1.7.4",
    "dotenv": "^16.0.3",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "glob": "^9.2.1",
    "helmet": "^6.0.1",
    "http-status": "^1.6.2",
    "node-dependency-injection": "^3.0.5",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.4",
    "typeorm": "^0.3.12",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.0.0",
    "@types/compression": "^1.7.2",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.15.0",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
